<html lang="en">
    <%- include('./partials/header.ejs') %>
    <style>
      @import url("https://fonts.googleapis.com/css2?family=Poppins&family=Roboto&display=swap");
@import url("https://fonts.googleapis.com/css2?family=Poppins&family=Roboto&display=swap");
@import url("https://fonts.googleapis.com/css2?family=Anton&family=Poppins&family=Roboto&display=swap");
@import url("https://fonts.googleapis.com/css2?family=Poppins&family=Roboto&family=Russo+One&display=swap");

:root {
  --shadow: 0 1px 7px rgba(105, 105, 105, 0.8);
}

* {
  margin: 0;
  padding: 0;
}

html {
  box-sizing: border-box;
  font-family: "Poppins", sans-serif;
  color: black;
}

body {
  background-image: linear-gradient(to right, #e2dfdf, #a496b1);
  line-height: 1.5rem;
}

.wrapper {
  display: grid;
  gap: 20px;
}

/* Banner */

.title {
  font-size: 3rem;
  color: white;
}

.banner {
  background-image: linear-gradient(to right, #6a458d, #190a05);
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30px 50px;
  font-family: "Russo One", sans-serif;
}

.main-nav ul {
  display: grid;
  gap: 30px;
  grid-template-columns: repeat(5, 1fr);
  list-style-type: none;
  padding: 0;
}

.main-nav a {
  display: block;
  text-decoration: none;
  text-align: center;
  background-color: #6a458d;
  color: white;
  font-size: 1.2rem;
  padding: 0.5rem;
  box-shadow: var(--shadow);
  text-transform: uppercase;
}

.main-nav a:hover {
  background-color: white;
  color: black;
}

.login-container {
  margin-top: 10rem;
  margin-left: auto;
  margin-right: auto;
  padding: 1rem;
  text-align: center;
  max-width: 1060px;
}

.login-form-container {
  text-align-last: center;
  display: grid;
  max-width: 1060px;
  margin-left: auto;
  margin-right: auto;
  padding-bottom: 1rem;
  align-content: center;
}

.form-container-title {
  padding-bottom: 3rem;
  font-size: 3rem;
}

.the-input {
  padding: 0.5rem;
  margin-top: 3rem;
  margin-bottom: 1rem;
  text-align: center;

}

.submit {
  width: 100px;
  margin-left: auto;
  margin-right: auto;
  padding-top: 0.5rem;
  padding-bottom: 0.5rem;
  margin-top: 2rem;
}

a {
  text-decoration: none;
  color: black;
}

.content {
  margin-top: 9rem;
  max-width: 1060px;
  margin-left: auto;
  margin-right: auto;
  padding: 30px 50px;
  text-align: center;
}

.logout-button {
  background-color: #4b9e85;
}

.search-title {
  margin-bottom: 2rem;
}
.searchbar {
  padding-top: 0.5rem;
  padding-bottom: 0.5rem;
  width: 100%;
  text-align: center;
  margin-bottom: 1rem;
  font-size: 1rem;
}
.drop-down-bar {
  width: 100%;
  padding-top: 0.5rem;
  padding-bottom: 0.5rem;
  text-align: center;
  font-size: 1rem;
}

.account-title {
  margin-bottom: 1rem;
}

@media (max-width: 1070px) {
  .banner {
    display: grid;
    text-align: center;
    grid-template-columns: repeat(1, 1fr);
    gap: 20px;
    padding: 30px 30px;
  }
  .main-nav ul {
    display: grid;
    gap: 10px;
    grid-template-columns: repeat(3, 1fr);
    list-style-type: none;
    padding: 0;
  }
}
      </style>
    <body>
        <%- include('./partials/banner.ejs') %>
        <div class="edit-container">
            <div class="content">
                <form action="/account/<%= locals.theId %>?_method=PATCH" method="POST">
                    <h1 class="input-title">Enter your new username </h1>
                    <input class="the-input" type="text" name="username" value="<%= locals.username %>" required> <br>
                    </br> 
                    <button class="submit">PATCH</button>
                </form>
            </div>
        </div>
    </body>
   
</html>