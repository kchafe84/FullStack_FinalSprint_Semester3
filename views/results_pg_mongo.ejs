<html lang="en">
    <%- include('./partials/header.ejs') %>
    <style>
        @import url("https://fonts.googleapis.com/css2?family=Poppins&family=Roboto&display=swap");
        @import url("https://fonts.googleapis.com/css2?family=Poppins&family=Roboto&display=swap");
        @import url("https://fonts.googleapis.com/css2?family=Anton&family=Poppins&family=Roboto&display=swap");
        @import url("https://fonts.googleapis.com/css2?family=Poppins&family=Roboto&family=Russo+One&display=swap");
    
        :root {
          --shadow: 0 1px 7px rgba(105, 105, 105, 0.8);
        }
    
        * {
          margin: 0;
          padding: 0;
        }
    
        html {
          box-sizing: border-box;
          font-family: "Poppins", sans-serif;
          color: black;
        }
    
        body {
          background-image: linear-gradient(to right, #e2dfdf, #a496b1);
          line-height: 1.5rem;
        }
    
        .wrapper {
          display: grid;
          gap: 20px;
        }
    
        /* Banner */
    
        .title {
          font-size: 3rem;
          color: white;
        }
    
        .banner {
          background-image: linear-gradient(to right, #6a458d, #190a05);
          display: flex;
          justify-content: space-between;
          align-items: center;
          padding: 30px 50px;
          font-family: "Russo One", sans-serif;
        }
    
        .main-nav ul {
          display: grid;
    
          gap: 30px;
    
          grid-template-columns: repeat(5, 1fr);
          list-style-type: none;
          padding: 0;
        }
    
        .main-nav a {
          display: block;
          text-decoration: none;
          text-align: center;
          background-color: #6a458d;
          color: white;
          font-size: 1.2rem;
          padding: 0.5rem;
          box-shadow: var(--shadow);
          text-transform: uppercase;
        }
    
        .main-nav a:hover {
          background-color: white;
          color: black;
        }
    
        @media (max-width: 970px) {
          .banner {
            display: grid;
            text-align: center;
            grid-template-columns: repeat(1, 1fr);
            gap: 20px;
            padding: 30px 30px;
          }
          .main-nav ul {
            display: grid;
            gap: 10px;
            grid-template-columns: repeat(3, 1fr);
            list-style-type: none;
            padding: 0;
          }
        }
        .container{
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            margin-top: 3rem;
            max-width: 1060px;
            margin-left: auto;
            margin-right: auto;
            padding: 30px 50px;
            text-align: center;
        }

        .content {
            margin-top: 3rem;
            max-width: 1060px;
            margin-left: auto;
            margin-right: auto;
            padding: 30px 50px;
            text-align: center;
          }
          .results-box{
            
            border-radius: 20px;
            margin-top: 1rem;
            padding: 1rem;
           
          }
    </style>
    <body>
        <%- include('./partials/banner.ejs') %>
        <div class="content">
        <h3>Results from <%= theDb %> </h3>
        <div class="container">
        <div class="mongo">
       
        <form action="/results_pg_mongo" method="POST">
            <h3>from mongo data base</h3> <br> 
            <b>Results: [<%= theSearchesMongo.length %>] for keyword searched; "<%= search %>" </b></br> <br>
            <div class="results-box">
            <% if (theSearchesMongo.length > 0) { %>
                <% theSearchesMongo.forEach(search => { %>
                    <b> - <%= search.year %> <%= search.brand %> <%= search.model %> <%= search.cost %></b> <br>
                    <p> <%= search.colour %> <%= search.vin %> <br>
                        <%= search.country %> <%= search.city %> <%= search.address %>
                    </p> 
                    
                    <% }) %>
            <% } %>
          </div>
        </div>
        <div class="postgres">
            <h3>from postgres data base</h3> <br>
            <b>Results: [<%= theSearchesPG.length %>] for keyword searched; "<%= search %>" </b></br> <br>
            <div class="results-box">
            <% if (theSearchesPG.length > 0) { %>
                <% theSearchesPG.forEach(search => { %>
                    <b> - <%= search.year %> <%= search.brand %> <%= search.model %> <%= search.cost %></b> <br>
                    <p> <%= search.colour %> <%= search.vin %> <br>
                        <%= search.country %> <%= search.city %> <%= search.address %>
                    </p> 
                    
                    <% }) %>
            <% } %>
          </div>
        </div>
      
    </div>
  </div>
    </body>
</html>